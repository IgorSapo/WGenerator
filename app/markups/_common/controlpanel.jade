.controlpanel
	form(action="php/upload.php" class="wmsettings")
		h2.controlpanel-header Настройки
		.controlpanel-item.imageupload
			include mainimage
			//- include watermark
		.controlpanel-item.position
			h3.controlpanel-subheader Положение
			include singleimage
			include multipleimage
		.controlpanel-item.opacity
			h3.controlpanel-subheader Прозрачность
			div#slider-range
			input(id="opacityvalue" name="opacity" value="0.5")
		.buttons
			button(type="reset" class="button button_reset") Сброс
			button(type="sumbit" class="button button_submit") Скачать